<Window x:Class="POINTOFSALE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POINTOFSALE"
        mc:Ignorable="d"
        Title="Point of Sale System" Height="450" Width="800"
        Background="#F0F2F5" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Main Container -->
        <Border CornerRadius="10" Background="White" Padding="20" Margin="20" BorderBrush="#DADDE1" BorderThickness="1">
            <Grid>
                <!-- Title -->
                <TextBlock Text="Welcome to Saifullah Hakro's Point of Sale System" 
                           FontSize="24" FontWeight="Bold" Foreground="#1877F2" 
                           HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" />

                <!-- Login Form -->
                <StackPanel Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <!-- Username -->
                    <TextBlock Text="User Name" FontSize="14" Foreground="#606770" Margin="0,0,0,5" />
                    <TextBox Text="admin" Name="UserName" Height="30" BorderBrush="#BCC0C4" BorderThickness="1" Padding="5" Margin="0,0,0,10" />

                    <!-- Password -->
                    <TextBlock Text="Password" FontSize="14" Foreground="#606770" Margin="0,0,0,5" />
                    <PasswordBox Name="Password" Height="30" BorderBrush="#BCC0C4" BorderThickness="1" Padding="5" Margin="0,0,0,10" />

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <!-- Login Button -->
                        <Button Click="Login_Button_Click" Content="Login" Width="100" Height="30" Margin="5,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#0056D2" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="BorderBrush" Value="#145DBF" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#003E99" />
                                            <Setter Property="BorderBrush" Value="#002F73" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Forgot Password Button -->
                        <Button Content="Forgot Password" Width="150" Height="30" Margin="5,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#1877F2" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="BorderBrush" Value="#145DBF" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                                        CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#145DBF" />
                                            <Setter Property="BorderBrush" Value="#0F4A8A" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
