<Window x:Class="POINTOFSALE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POINTOFSALE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="LightGray">
    <Grid>
        <TextBlock HorizontalAlignment="Center" FontSize="20">Welcome to Saifullah Hakro's Point of Sale System</TextBlock>
        <StackPanel Width="150" VerticalAlignment="Center">
            <TextBlock>User Name</TextBlock>
            <TextBox Name="UserName"></TextBox>
            <TextBlock>Password</TextBlock>
            <PasswordBox Name="Password"></PasswordBox>
            <Button Click="Login_Button_Click">Login</Button>
            <Button>Forgot Password</Button>
        </StackPanel>
    </Grid>
</Window>